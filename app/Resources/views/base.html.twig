<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/uikit.min.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" media="all" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script src="{{ asset('js/uikit.min.js') }}"></script>
        <script src="{{ asset('js/uikit-icons.min.js') }}"></script>
        <script src="{{ asset('js/angular.min.js')}}"></script>
    </head>
    <body ng-app="agroov">
        {% block body %}
            {% for message in app.flashes('success') %}
                <div id="success" uk-modal>
                    <div class="uk-modal-dialog uk-modal-body">
                        <h2 class="uk-modal-title">{% trans %}Успех{% endtrans%}</h2>
                        <p>{{ message }}</p>
                        <p class="uk-text-right">
                            <button class="uk-button uk-button-default uk-modal-close" type="button">{% trans %}Закрыть{% endtrans%}</button>
                        </p>
                    </div>
                </div>
                <script>
                    UIkit.modal('#success').show();
                </script>
            {% endfor %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
