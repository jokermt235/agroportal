<!DOCTYPE html>
<html prefix="og: http://ogp.me/ns#">
    <head>
        <meta charset="UTF-8" />
        <meta name="yandex-verification" content="b239afc0b3f6b2b5" />
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <meta property="og:title" content="{% if og_title is defined %} {{ og_title }} {% endif %}">
        <meta property="og:description" content="МЕЖДУНАРОДНЫЙ АГРОПОРТАЛ" />
        <meta property="og:image" content="
            {% if og_image is defined %} 
                {{ og_image }} 
            {% else %}
                {{ asset('/images/favicon.png') }} 
            {% endif %}" />
        <meta property="og:type" content="website">
        <meta name="description" content="Agroov" />
        <meta property="og:url" content="
        {% if og_url is defined %} 
                {{ og_url }} 
            {% else %}
                {{ 'argroov.com' }} 
            {% endif %}">
        <title>{% if page_title is defined %} {{ page_title }} {% endif %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/uikit.min.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('css/jquery-ui.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" media="all" />
        {% endblock %}
        <link rel="icon" type="image/png" href="{{ asset('/images/favicon32x32.png') }}" /> 
        <script src="{{ asset('js/uikit.min.js') }}"></script>
        <script src="{{ asset('js/uikit-icons.min.js') }}"></script>
        <script src="{{ asset('js/angular.min.js')}}"></script>
        <script src="{{ asset('js/jquery-3.3.1.min.js')}}"></script>
        <script src="{{ asset('js/jquery-ui.js')}}"></script>
        <script>
            var main = angular.module("agroov",[]);
        </script>
    </head>
    <body ng-app="agroov">
        {% block body %} 
            {% for message in app.flashes('success') %}
                <div id="success" uk-modal>
                    <div class="uk-modal-dialog uk-modal-body">
                        <h2 class="uk-modal-title">{% trans %}Успех{% endtrans%}</h2>
                        <p>{{ message }}</p>
                        <p class="uk-text-right">
                            <button class="uk-button uk-button-default uk-modal-close" type="button">
                                <span uk-icon="icon: close;"></span>
                                {% trans %}Закрыть{% endtrans%}
                            </button>
                        </p>
                    </div>
                </div>
                <script>
                    UIkit.modal('#success').show();
                </script>
            {% endfor %}
        {% endblock %}
        {% block javascripts %}
        
        {% endblock %}
    </body>
</html>
