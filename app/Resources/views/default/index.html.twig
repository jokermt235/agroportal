{% extends 'base.html.twig' %}
{% block body %}
{% include 'header.html.twig' %}
{% include 'nav.html.twig' %}
{% include 'actionbar.html.twig' %}
<div class="uk-grid uk-margin uk-child-width-expand@s" uk-grid>
     <div class="uk-grid-small" uk-grid uk-height-match="target: > div > .uk-card">
         <div class="uk-width-expand@s">
            <div class="uk-card uk-card-default uk-card-body">
                <div class="uk-margin">
                    <div class="uk-margin">
                        <div uk-form-custom="target: > * > span:first-child">
                            <select>
                                <option value="1">Кыргызстан</option>
                                <option value="2">Казахстан</option>
                                <option value="3">Россия</option>
                                <option value="4">Узбекистан</option>
                                <option value="5">Таджикистан</option>
                            </select>
                            <button class="uk-button uk-button-small uk-text-lowercase uk-width-xlarge uk-button-default uk-margin-medium-bottom" type="button" tabindex="-1">
                                <span>выбрать страну</span>
                                <span uk-icon="icon: chevron-down"></span>
                            </button>
                        </div>
                    </div>
                </div>
                <ul class="uk-nav-default uk-margin-auto-left" uk-nav>
                    {% for category in categories %}
                    <li class="uk-parent uk-active uk-position-relative uk-position-small uk-margin-remove">
                        <a class="uk-margin-left" href="#">
                            {{category.name}}
                        </a>
                    </li>
                    {% endfor %}
                    <li class="uk-margin-large-top">
                        <div class="uk-margin-bottom uk-visible-toggle" uk-slideshow="ratio: 9:11; animation: push">

                            <ul class="uk-slideshow-items">
                                <li>
                                    <img src="https://getuikit.com/docs/images/photo.jpg" alt="" uk-cover>
                                </li>
                                <li>
                                    <img src="https://getuikit.com/docs/images/dark.jpg" alt="" uk-cover>
                                </li>
                                <li>
                                    <img src="https://getuikit.com/docs/images/light.jpg" alt="" uk-cover>
                                </li>
                            </ul>

                            <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
                            <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slideshow-item="next"></a>

                        </div>
                    </li>
                </ul>
                
            </div>
         </div>
         
         <div class="uk-width-3-4">
            <div class="uk-card uk-card-default uk-padding" uk-card>
                <ul uk-tab>
                    {% for section in sections%}
                    <li><a href="#">{{section.name}}</a></li>
                    {% endfor%}
                </ul>
                <ul class="uk-switcher uk-margin">
                    {% for advert in adverts%}
                    <li>
                        <div id="accordion">
                            <div style="margin-bottom:5px;padding: 5px" 
                                class="uk-card uk-card-default uk-card-small uk-padding-small  uk-card-hover">
                                <div class="uk-grid uk-grid-small">
                                    <div class="uk-width-auto">
                                    <span uk-icon="check" style="color: green"></span>  
                                </div>
                                <div class="uk-width-expand">
                                    <div class="uk-text-truncate">
                                        {{advert.title}}
                                    </div>
                                </div>
                                <div class="uk-width-auto">
                                    <span class="uk-text-meta uk-margin-small-right">{{advert.created}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="uk-grid uk-child-width-expand@m uk-grid-small uk-margin-top uk-text-center" uk-grid>
                            <div>
                                <img class="uk-border-circle" width="25" height="25" src="images/coins.svg">
                                <span class="uk-label uk-label-warning uk-text-bold" style="color: red;background-color: yellow;">
                                    {{advert.price}} сом
                                </span>
                            </div>
                            <div>
                                <img class="uk-border-circle" width="25" height="25" src="images/phone-call.svg">
                                <span class="uk-text-truncate uk-margin-small-left">{{advert.phone}}</span>
                            </div>
                            <div>
                                <a href="{{path('_advert_view',{'id':advert.id})}}" class="uk-button uk-button-small uk-button-primary uk-width-1-2">Подробно</a>
                            </div>
                        </div>
                    </li>
                    {%endfor%}
                </ul>
                <ul class="uk-pagination uk-flex-center" uk-margin-top>
                    <li><a href="#"><span uk-pagination-previous></span></a></li>
                    <li><a href="#">1</a></li>
                    <li class="uk-disabled"><span>...</span></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">6</a></li>
                    <li class="uk-active"><span>7</span></li>
                    <li><a href="#">8</a></li>
                    <li><a href="#"><span uk-pagination-next></span></a></li>
                </ul>
            </div>
         </div>
    </div>
</div>
<div class="uk-panel uk-background-muted uk-text-center uk-padding-large">
    <h2>{%trans%}Остались вопросы?{% endtrans %}</h2>
    <ul class="uk-nav uk-nav-default">
        <li>Если наш сервис заинтересовал вас, но у вас остались вопросы — мы с радостью ответим на них!</li>
        <li> Просто оставьте свой телефон и мы вам перезвоним.</li>
    </ul>
    <div class="uk-margin-top">
        <input class="uk-input uk-form-width-medium" type="text" placeholder="Телефон">
        <button class="uk-button uk-button-default" style="background-color: limegreen; color:white">Отправить</button>
        <p class="uk-text-meta" style="font-size: 13px">Нажимая кнопку «Отправить», вы соглашаетесь с <a class="uk-text-muted" href="#">условиями использования</a> и обработкой персональных данных.</p>
    </div>
</div>
{% include 'footer.html.twig'%}
{% endblock %}
